generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Jogo {
  id              Int   @id   @default(autoincrement())
  nome            String
  desenvolvedor   String
  genero          String
  anoLancamento   Int
  preco           Decimal @db.Decimal(10, 2)
  descricao       String
  crestedAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@map("jogos")       
}